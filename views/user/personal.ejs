
    <div class="w-full md:w-3/4">
        <div id="profile" class="bg-white rounded-lg shadow-md p-6">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-semibold">Personal Details</h1>
                <button id="edit-btn" class="text-blue-600 hover:text-blue-800">Edit</button>
            </div>
        
            <form id="profile-form" action="/profile/update" method="POST">
                <div class="space-y-4">
                    <div class="flex items-center">
                        <span class="w-1/3 text-gray-600">Full name:</span>
                        <span class="w-2/3" id="name-display"><%= name %></span>
                        <input 
                            type="text" 
                            name="name" 
                            value="<%= name %>" 
                            id="name-input" 
                            class="hidden w-2/3 border border-gray-300 rounded-md"
                        />
                    </div>
            
                    <div class="flex items-center">
                        <span class="w-1/3 text-gray-600">Phone number:</span>
                        <span class="w-2/3" id="phone-display"><%= phone %></span>
                        <input 
                            type="text" 
                            name="phone" 
                            value="<%= phone %>" 
                            id="phone-input" 
                            class="hidden w-2/3 border border-gray-300 rounded-md"
                        />
                    </div>
            
                    <div class="flex items-center">
                        <span class="w-1/3 text-gray-600">Email address:</span>
                        <span class="w-2/3"><%= email %></span>
                        <!-- Email cannot be edited -->
                    </div>
            
                    <div class="flex items-center">
                        <span class="w-1/3 text-gray-600">Gender:</span>
                        <span class="w-2/3" id="gender-display"><%= gender %></span>
                        <div id="gender-inputs" class="hidden w-2/3">
                            <label class="inline-flex items-center">
                                <input type="radio" name="gender" value="male" id="gender-male" <% if (gender === 'male') { %> checked <% } %> />
                                <span>Male</span>
                            </label>
                            <label class="inline-flex items-center ml-4">
                                <input type="radio" name="gender" value="female" id="gender-female" <% if (gender === 'female') { %> checked <% } %> />
                                <span>Female</span>
                            </label>
                            <label class="inline-flex items-center ml-4">
                                <input type="radio" name="gender" value="other" id="gender-other" <% if (gender === 'other') { %> checked <% } %> />
                                <span>Other</span>
                            </label>
                        </div>
                    </div>
                </div>
            
                <div class="mt-4">
                    <button 
                        id="edit-btn" 
                        type="button" 
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                    >
                        Edit
                    </button>
                    <button 
                        id="save-btn" 
                        type="submit" 
                        class="hidden bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
                    >
                        Save
                    </button>
                    <button 
                        id="cancel-btn" 
                        type="button" 
                        class="hidden bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
                    >
                        Cancel
                    </button>
                </div>
            </form>
            
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
    const editButton = document.getElementById('edit-btn');
    const saveButton = document.getElementById('save-btn');
    const cancelButton = document.getElementById('cancel-btn');

    const nameDisplay = document.getElementById('name-display');
    const nameInput = document.getElementById('name-input');

    const phoneDisplay = document.getElementById('phone-display');
    const phoneInput = document.getElementById('phone-input');

    const genderDisplay = document.getElementById('gender-display');
    const genderInputs = document.getElementById('gender-inputs');

    // Switch to edit mode
    editButton.addEventListener('click', () => {
        editButton.classList.add('hidden');
        saveButton.classList.remove('hidden');
        cancelButton.classList.remove('hidden');

        nameDisplay.classList.add('hidden');
        nameInput.classList.remove('hidden');

        phoneDisplay.classList.add('hidden');
        phoneInput.classList.remove('hidden');

        genderDisplay.classList.add('hidden');
        genderInputs.classList.remove('hidden');
    });

    // Switch to view mode
    cancelButton.addEventListener('click', () => {
        editButton.classList.remove('hidden');
        saveButton.classList.add('hidden');
        cancelButton.classList.add('hidden');

        nameDisplay.classList.remove('hidden');
        nameInput.classList.add('hidden');

        phoneDisplay.classList.remove('hidden');
        phoneInput.classList.add('hidden');

        genderDisplay.classList.remove('hidden');
        genderInputs.classList.add('hidden');
    });
});

        </script>
</body>
</html>

